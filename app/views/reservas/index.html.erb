<p id="notice"><%= notice %></p>

<h1>Reservas</h1>

<table>
  <thead>
    <tr>
      <th>Anombre</th>
      <th>Fecha</th>
      <th>N personas</th>
      <th>N contacto</th>
      <th>Indicaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.anombre %></td>
        <td><%= reserva.fecha %></td>
        <td><%= reserva.n_personas %></td>
        <td><%= reserva.n_contacto %></td>
        <td><%= reserva.indicaciones %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

